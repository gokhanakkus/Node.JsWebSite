<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Ürünler</h1>
    <p>
        <%= urunler[0].name %>-
        <%= urunler[0].price %>
    </p>

    <ul>
        <% urunler.forEach(urun => { %>

            <% if (urun.price >= 40000 && urun.isActive ) { %>
                <li>
                    <a href="/products/<%= urun.id %>">
                    <%= urun.name %> - <%= urun.price %>
                    </a>
                </li>
            <% } %>
        <% }) %>
    </ul>
</body>
</html>